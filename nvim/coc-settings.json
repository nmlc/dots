  {
    "languageserver": {
      "golang": {
        "command": "gopls",
        "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
        "filetypes": ["go"],
        "initializationOptions": {
          "deepCompletion": true,
          "completeUnimported": true,
          "hoverKind": "FullDocumentation",
          "usePlaceholders": false
        }
      },
      "ccls": {
        "command": "ccls",
        "filetypes": ["c", "cpp", "objc", "objcpp"],
        "rootPatterns": [".ccls", "compile_commands.json", ".git/", ".hg/"],
        "initializationOptions": {
           "cache": {
             "directory": "/tmp/ccls"
           }
         }
      }
    }
  }
  
